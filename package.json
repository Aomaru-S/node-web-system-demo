{
  "name": "node-web-system-demo",
  "version": "1.0.0",
  "description": "This project is a demo of a web system on node.",
  "private": "true",
  "scripts": {
    "start-backend": "ts-node backend/src/app.ts",
    "start-frontend": "ts-node frontend/src/index.ts",
    "start": "npm run start-backend && npm run start-frontend",
    "prettier:check": "prettier --check backend/src/ frontend/src/",
    "eslint:check": "eslint backend/src/ frontend/src/",
    "code:check": "npm run prettier:check & npm run eslint:check",
    "prettier:fix": "prettier --write backend/src/ frontend/src/",
    "eslint:fix": "eslint --fix backend/src/ frontend/src/",
    "code:fix": "npm run prettier:fix & npm run eslint:fix",
    "prepare": "husky install"
  },
  "author": "Souhei.H",
  "license": "UNLICENSED",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.4"
  }
}
